<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="size"
            type="com.example.project_myfit.ui.main.listfragment.database.Size" />

        <variable
            name="constant"
            type="com.example.project_myfit.MyFitConstant" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/_68sdp"
        tools:context=".ui.main.listfragment.inputoutputfragment.InputOutputFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/add_icon"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:alpha="0.2"
                        android:clickable="false"
                        android:src="@drawable/icon_add_image" />

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:alpha="0.7"
                        android:text="@string/created_time"
                        android:textSize="@dimen/_7sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:alpha="0.7"
                        android:text="@{size.createdTime}"
                        android:textSize="@dimen/_7sdp"
                        tools:text=" 2021년 10월 14일 10:34:10" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:alpha="0.7"
                        android:text="@string/modified_time"
                        android:textSize="@dimen/_7sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:text="@{size.modifiedTime}"
                        android:textSize="@dimen/_7sdp"
                        tools:text=" 2021년 10월 14일 10:34:10" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_16sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/brand_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:hint="@string/brand"
                    android:theme="@style/myEditText"
                    app:errorTextAppearance="@style/myTextSize8sdp"
                    app:hintTextAppearance="@style/myTextSize8sdp"
                    app:shapeAppearance="@style/myEditTextCorner">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:text="@={size.brand}"
                        android:textSize="@dimen/_10sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="3"
                        android:hint="@string/name"
                        android:theme="@style/myEditText"
                        app:errorTextAppearance="@style/myTextSize8sdp"
                        app:hintTextAppearance="@style/myTextSize8sdp"
                        app:shapeAppearance="@style/myEditTextCorner">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:text="@={size.name}"
                            android:textSize="@dimen/_10sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/size"
                        android:theme="@style/myEditText"
                        app:hintTextAppearance="@style/myTextSize8sdp"
                        app:shapeAppearance="@style/myEditTextCorner">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/size"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:text="@={size.size}"
                            android:textSize="@dimen/_10sdp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/input_top_outer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/length"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/length"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.LENGTH]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/shoulder"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/shoulder"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.SHOULDER]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/chest"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/chest"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.CHEST]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/sleeve"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sleeve"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.SLEEVE]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/input_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/length"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bottom_length"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.BOTTOM_LENGTH]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:background="@android:color/transparent" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/waist"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/waist"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.WAIST]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/thigh"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/thigh"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.THIGH]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/rise"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/rise"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.RISE]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/hem"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner"
                            app:suffixText="cm"
                            app:suffixTextAppearance="@style/myTextSize10sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hem"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:text='@={size.sizeMap[constant.HEM]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/input_etc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/option_1"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/option1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text='@={size.sizeMap[constant.OPTION1]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/option_2"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/option2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text='@={size.sizeMap[constant.OPTION2]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/option_3"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/option3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text='@={size.sizeMap[constant.OPTION3]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/option_4"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/option4"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text='@={size.sizeMap[constant.OPTION4]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:hint="@string/option_5"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/option5"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text='@={size.sizeMap[constant.OPTION5]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/option_6"
                            android:theme="@style/myEditText"
                            app:hintTextAppearance="@style/myTextSize8sdp"
                            app:shapeAppearance="@style/myEditTextCorner">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/option6"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:text='@={size.sizeMap[constant.OPTION6]}'
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/http"
                        android:theme="@style/myEditText"
                        app:hintTextAppearance="@style/myTextSize8sdp"
                        app:shapeAppearance="@style/myEditTextCorner">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/link"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:autoLink="web"
                            android:imeOptions="actionNext"
                            android:inputType="textUri"
                            android:linksClickable="true"
                            android:text="@={size.link}"
                            android:textColorLink="?attr/colorControlNormal"
                            android:textSize="@dimen/_10sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/go_button"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="@dimen/_44sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:text="@string/go"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/_10sdp"
                        app:backgroundTint="?go_button_color" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/memo"
                    android:theme="@style/myEditText"
                    app:hintTextAppearance="@style/myTextSize8sdp"
                    app:shapeAppearance="@style/myEditTextCorner">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@={size.memo}"
                        android:textSize="@dimen/_10sdp" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>
