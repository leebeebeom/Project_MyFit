<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.leebeebeom.closetnote.ui.signin.SignInFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.leebeebeom.closetnote.ui.view.CustomButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_google"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            android:onClick="@{() -> fragment.isConnect() ? fragment.googleSignIn() : void}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black"
            tools:ignore="RtlHardcoded" />

        <com.leebeebeom.closetnote.ui.view.CustomButton
            android:id="@+id/btnNaver"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_naver_small"
            android:onClick="@{() -> fragment.isConnect() ? fragment.naverSignIn() : void}"
            android:text="@string/sign_in_with_naver"
            android:textColor="@color/white"
            app:backgroundTint="#03C75A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGoogle"
            app:strokeColor="@android:color/transparent"
            tools:ignore="RtlHardcoded" />

        <com.leebeebeom.closetnote.ui.view.CustomButton
            android:id="@+id/btnKakao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_kakao_small"
            android:text="@string/sign_in_with_kakao"
            android:onClick="@{() -> fragment.isConnect() ? fragment.kakaoSignIn() : void}"
            android:textColor="@color/black"
            app:backgroundTint="#FEE500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/btnNaver"
            app:strokeColor="@android:color/transparent"
            tools:ignore="RtlHardcoded" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>