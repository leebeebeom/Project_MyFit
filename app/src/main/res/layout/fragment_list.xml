<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.leebeebeom.closetnote.ui.main.list.ListViewModel" />

        <variable
            name="fragment"
            type="com.leebeebeom.closetnote.ui.main.list.ListFragment" />
    </data>

    <com.leebeebeom.closetnote.ui.view.LockableScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.list.ListFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground">

            <include
                android:id="@+id/textNavigation"
                layout="@layout/fragment_list_text_navigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:fragment="@{fragment}"
                app:model="@{model}" />

            <include
                android:id="@+id/rvFolder"
                layout="@layout/fragment_list_recycler_view_folder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textNavigation"
                app:model="@{model}" />

            <include
                android:id="@+id/rvSize"
                android:layout_width="0dp"
                layout="@layout/fragment_list_recycler_view_size"
                android:layout_height="wrap_content"
                app:model="@{model}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvFolder" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.leebeebeom.closetnote.ui.view.LockableScrollView>
</layout>
