<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.leebeebeom.closetnote.ui.main.size.SizeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/length"
            layout="@layout/fragment_size_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_1sdp"
            app:hint="@{@string/size_length}"
            app:layout_constraintEnd_toStartOf="@id/shoulder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{model.sizeLive.firstInfo}" />

        <include
            android:id="@+id/shoulder"
            layout="@layout/fragment_size_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="0dp"
            app:hint="@{@string/size_shoulder}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/length"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{model.sizeLive.secondInfo}" />


        <include
            android:id="@+id/chest"
            layout="@layout/fragment_size_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_1sdp"
            app:hint="@{@string/size_chest}"
            app:layout_constraintEnd_toStartOf="@id/sleeve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/length"
            app:text="@{model.sizeLive.thirdInfo}" />

        <include
            android:id="@+id/sleeve"
            layout="@layout/fragment_size_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            app:hint="@{@string/size_sleeve}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chest"
            app:layout_constraintTop_toBottomOf="@id/shoulder"
            app:text="@{model.sizeLive.fourthInfo}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>