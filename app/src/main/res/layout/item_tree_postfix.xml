<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="treeHolder"
            type="com.example.myfit.ui.dialog.tree.holder.BaseTreeHolder" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCurrentPosition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/tree_current_position"
            android:textSize="@dimen/_6sdp"
            android:visibility="gone" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_content_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:alpha="0.6"
            android:text="@{treeHolder.value.contentsSize}"
            android:textSize="@dimen/_6sdp"
            tools:text="20" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconAdd"
            setAddIcon2="@{}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:onClick="@{() -> treeHolder.navigateAddFolderDialog()}"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/_16sdp"
            tools:src="@drawable/icon_add" />

    </LinearLayout>
</layout>