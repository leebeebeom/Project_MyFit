<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="treeHolder"
            type="com.leebeebeom.closetnote.ui.dialog.tree.holder.BaseTreeHolder" />
        <variable
            name="contentSize"
            type="int" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat style="@style/myWrapContent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCurrentPosition"
            style="@style/myWrapMatch"
            android:alpha="0.5"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/dialog_current_position"
            android:textSize="@dimen/_6sdp"
            tools:visibility="visible"
            android:visibility="gone" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_content_size"
            style="@style/myWrapContent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:alpha="0.6"
            android:text="@{contentSize}"
            android:textSize="@dimen/_6sdp"
            tools:text="20" />

        <com.leebeebeom.closetnote.ui.view.icon.AddIcon
            android:id="@+id/iconAdd"
            style="@style/myWrapMatch"
            android:alpha="0.8"
            android:onClick="@{() -> treeHolder.navigateAddFolderDialog()}"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/_16sdp"
            tools:src="@drawable/icon_add" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>