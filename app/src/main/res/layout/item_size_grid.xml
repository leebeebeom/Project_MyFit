<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="size"
            type="com.example.project_myfit.data.model.Size" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_4sdp"
            app:cardBackgroundColor="?myCardViewBackground"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_2sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv"
                        android:scaleType="centerCrop"
                        setUri="@{size.imageUri}"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        android:layout_marginTop="@dimen/_16sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        setAddIcon="@{size.imageUri}"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        tools:src="@drawable/icon_add_image"
                        android:alpha="0.2" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconDragHandle"
                        setDragHandle2="@{size.size}"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="-2dp"
                        android:alpha="0.9"
                        android:scaleX="0.7"
                        tools:src="@drawable/icon_drag_handle2" />
                </FrameLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutContents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_2sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{size.brand.trim()}"
                            android:textSize="@dimen/_7sdp"
                            tools:text="앤더슨벨" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:alpha="0.9"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{size.name.trim()}"
                            android:textSize="@dimen/_10sdp"
                            tools:text="오버핏 반팔" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cbFavorite"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:button="@drawable/check_box_heart"
                        android:background="@android:color/transparent"
                        android:checked="@={size.favorite}"
                        android:scaleX="0.7"
                        android:scaleY="0.7" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="top|center"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:alpha="0.8"
            android:buttonTint="?colorControlNormal"
            android:clickable="false"
            android:elevation="@dimen/_4sdp"
            android:enabled="false"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="gone" />
    </FrameLayout>
</layout>
