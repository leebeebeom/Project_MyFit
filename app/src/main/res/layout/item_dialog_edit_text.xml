<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.leebeebeom.closetnote.ui.dialog.eidttext.BaseEditTextViewModel" />

        <variable
            name="oldName"
            type="String" />

        <variable
            name="dialogBuilder"
            type="com.leebeebeom.closetnote.ui.dialog.DialogBuilder" />
    </data>

    <FrameLayout
        style="@style/myMatchWrap"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout"
            style="@style/myOutlinedEditTextLayout"
            android:layout_width="match_parent"
            app:endIconMode="clear_text"
            setOnKeyListener='@{""}'>

            <com.leebeebeom.closetnote.ui.view.CustomEditText
                android:id="@+id/et"
                style="@style/myEditText"
                addTextChangedListener="@{dialogBuilder}"
                oldName="@{oldName}"
                android:maxLength="30"
                android:imeOptions="actionDone"
                android:text="@={model.name}"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
    </FrameLayout>
</layout>
