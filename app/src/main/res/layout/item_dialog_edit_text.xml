<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="hint"
            type="String" />

        <variable
            name="setText"
            type="String" />

        <variable
            name="placeHolder"
            type="String" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editText_layout_dialog"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@{hint}"
            android:theme="@style/myEditText"
            app:endIconMode="clear_text"
            app:helperTextTextAppearance="@style/myHintSize"
            app:hintTextAppearance="@style/myHintSize"
            app:placeholderTextAppearance="@style/mySuffixSize">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_dialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:text="@{setText}"
                android:textSize="@dimen/_11sdp" />
        </com.google.android.material.textfield.TextInputLayout>
    </FrameLayout>
</layout>
