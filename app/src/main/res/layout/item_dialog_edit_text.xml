<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.myfit.ui.dialog.eidttext.BaseEditTextViewModel" />
        <variable
            name="dialogFragment"
            type="com.example.myfit.ui.dialog.eidttext.BaseEditTextDialog" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/myEditTextOutlineColor"
            android:hint="@{dialogFragment.hint}"
            app:placeholderText="@{dialogFragment.placeHolder}"
            app:endIconMode="clear_text"
            app:errorTextAppearance="@style/myTextSize8sdp"
            app:hintTextAppearance="@style/myTextSize8sdp"
            app:placeholderTextAppearance="@style/myTextSize11sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et"
                android:layout_height="@dimen/_36sdp"
                android:layout_width="match_parent"
                android:maxLength="30"
                android:imeOptions="actionDone"
                android:text="@={model.name}"
                android:inputType="text"
                android:textSize="@dimen/_11sdp" />
        </com.google.android.material.textfield.TextInputLayout>
    </FrameLayout>
</layout>
