<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/myMatchWrap"
    app:layout_constraintEnd_toEndOf="parent"
    android:alpha="0.5"
    app:layout_constraintStart_toStartOf="parent">

    <View
        android:id="@+id/orDivider1"
        style="@style/myHorizontalDivider"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvOr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvOr"
        style="@style/myWrapContent"
        android:text="@string/sign_or"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/orDivider2"
        app:layout_constraintStart_toEndOf="@id/orDivider1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/orDivider2"
        android:layout_marginStart="@dimen/_8sdp"
        style="@style/myHorizontalDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvOr"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>