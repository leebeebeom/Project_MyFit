<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="size"
            type="com.example.project_myfit.data.model.Size" />

        <variable
            name="constant"
            type="com.example.project_myfit.util.MyFitConstant" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="1"
                android:hint="@string/option_1"
                android:theme="@style/myEditText"
                app:hintTextAppearance="@style/myTextSize8sdp"
                app:shapeAppearance="@style/myEditTextCorner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/includeOption1EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text='@={size.sizeMap[constant.OPTION1]}'
                    android:textSize="@dimen/_10sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/option_2"
                android:theme="@style/myEditText"
                app:hintTextAppearance="@style/myTextSize8sdp"
                app:shapeAppearance="@style/myEditTextCorner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/includeOption2EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text='@={size.sizeMap[constant.OPTION2]}'
                    android:textSize="@dimen/_10sdp" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="1"
                android:hint="@string/option_3"
                android:theme="@style/myEditText"
                app:hintTextAppearance="@style/myTextSize8sdp"
                app:shapeAppearance="@style/myEditTextCorner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/includeOption3EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text='@={size.sizeMap[constant.OPTION3]}'
                    android:textSize="@dimen/_10sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/option_4"
                android:theme="@style/myEditText"
                app:hintTextAppearance="@style/myTextSize8sdp"
                app:shapeAppearance="@style/myEditTextCorner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/includeOption4EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text='@={size.sizeMap[constant.OPTION4]}'
                    android:textSize="@dimen/_10sdp" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="1"
                android:hint="@string/option_5"
                android:theme="@style/myEditText"
                app:hintTextAppearance="@style/myTextSize8sdp"
                app:shapeAppearance="@style/myEditTextCorner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/includeOption5EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text='@={size.sizeMap[constant.OPTION5]}'
                    android:textSize="@dimen/_10sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/option_6"
                android:theme="@style/myEditText"
                app:hintTextAppearance="@style/myTextSize8sdp"
                app:shapeAppearance="@style/myEditTextCorner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/includeOption6EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text='@={size.sizeMap[constant.OPTION6]}'
                    android:textSize="@dimen/_10sdp" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>