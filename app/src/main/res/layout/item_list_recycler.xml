<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="size"
            type="com.example.project_myfit.ui.main.listfragment.database.Size" />
    </data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/list_swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:mode="normal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/list_delete_icon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"

                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                android:background="#B00020"
                android:scaleType="center"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/icon_delete"
                android:tint="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/list_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_2sdp"
                app:cardBackgroundColor="?colorPrimary"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:alpha="0.7"
                        android:text="@{size.brand}"
                        android:textSize="@dimen/_8sdp"
                        tools:text="Anderson Bell" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:alpha="0.8"
                        android:text="@{size.name}"
                        android:textSize="@dimen/_11sdp"
                        app:fontFamily="@font/sc_dream5"
                        tools:text="DAMAGED CREW NECK SWEATER" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/list_drag_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:alpha="0.8"
                    app:srcCompat="@drawable/icon_drag_handle" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</layout>
