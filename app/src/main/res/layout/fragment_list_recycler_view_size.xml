<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.myfit.util.constant.ViewType" />

        <variable
            name="listFragment"
            type="com.example.myfit.ui.main.list.ListFragment" />

        <variable
            name="model"
            type="com.example.myfit.ui.main.list.ListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/recycler_background"
            android:clipToPadding="false"
            android:minHeight="@dimen/_560sdp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:paddingHorizontal="@{model.viewTypePreferenceLive == ViewType.LIST_VIEW ? 0 : @dimen/_560sdp}"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_60sdp"
            app:adapter="@{model.viewTypePreferenceLive ==  ViewType.LIST_VIEW ?
                        listFragment.sizeAdapterList : listFragment.sizeAdapterGrid}"
            app:hasFixedSize="@{true}"
            app:layoutManager="@{model.viewTypePreferenceLive == ViewType.LIST_VIEW ?
                        androidx.recyclerview.widget.LinearLayoutManager : androidx.recyclerview.widget.GridLayoutManager}"
            app:spanCount="@{model.viewTypePreferenceLive == ViewType.LIST_VIEW ? 1 : 2}"
            tools:listitem="@layout/item_vh_size_list" />

        <FrameLayout
            android:id="@+id/layoutNoData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/recycler_background"
            android:minHeight="@dimen/_560sdp"
            android:visibility="@{model.sizeLive.empty ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:text="@string/all_no_data"
                android:textSize="@dimen/_20sdp" />
        </FrameLayout>
    </FrameLayout>
</layout>