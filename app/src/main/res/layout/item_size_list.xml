<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="size"
            type="com.example.project_myfit.data.model.Size" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_item_size_list"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:alpha="0.8"
            android:buttonTint="?colorControlNormal"
            android:clickable="false"
            android:enabled="false"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_item_size_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            app:cardBackgroundColor="?myCardViewBackground"
            app:cardElevation="@dimen/_2sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_item_size_list_picture"
                        setUri="@{size.imageUri}"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icon_item_size_list_add_image"
                        setAddIcon="@{size.imageUri}"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:alpha="0.2"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/icon_add_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_6sdp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_item_size_list_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:alpha="0.7"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{size.brand.trim()}"
                        android:textSize="@dimen/_8sdp"
                        tools:text="Anderson Bell" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_item_size_list_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{size.name.trim()}"
                        android:textSize="@dimen/_10sdp"
                        tools:text="DAMAGED CREW NECK SWEATER" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cb_item_size_list_favorite"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"
                    android:button="@drawable/check_box_heart"
                    android:checked="@={size.favorite}"
                    android:gravity="bottom"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_item_size_list_drag_handle"
                    setDragHandle="@{size.size}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:alpha="0.8"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:visibility="gone"
                    tools:src="@drawable/icon_drag_handle" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>
