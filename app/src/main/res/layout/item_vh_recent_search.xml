<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recentSearch"
            type="com.leebeebeom.closetnote.data.model.model.RecentSearch" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/myMatchWrap">

        <com.leebeebeom.closetnote.ui.view.icon.RecentSearchIcon
            android:id="@+id/iconRecentSearch"
            style="@style/myWrapContent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:alpha="0.7"
            android:scaleX="0.9"
            android:scaleY="0.9"
            tools:src="@drawable/icon_recent_search" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/myWrapMatch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconRecentSearch"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_4sdp"
            android:alpha="0.8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/_220sdp"
            android:maxLines="1"
            android:paddingBottom="@dimen/_1sdp"
            android:text="@{recentSearch.word}"
            android:textSize="@dimen/_10sdp"
            tools:text="안녕하세여" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/myWrapContent"
            android:layout_marginEnd="@dimen/_6sdp"
            android:alpha="0.9"
            android:text="@{recentSearch.date}"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iconDelete"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="02월 13일" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconDelete"
            style="@style/myWrapContent"
            android:alpha="0.8"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/icon_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
