<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="size"
            type="com.example.project_myfit.ui.main.listfragment.database.Size" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            app:cardBackgroundColor="?myCardViewBackground"
            app:cardElevation="@dimen/_2sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    setClothIcon="@{size.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:alpha="0.8"
                    tools:src="@drawable/icon_cloth" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:alpha="0.7"
                        android:layout_marginTop="-1dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{size.brand}"
                        android:textSize="@dimen/_7sdp"
                        tools:text="Anderson Bell" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:alpha="0.8"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{size.name}"
                        android:textSize="@dimen/_11sdp"
                        tools:text="DAMAGED CREW NECK SWEATER" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/search_size_check_box"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:alpha="0.8"
                    android:buttonTint="?colorControlNormal"
                    android:clickable="false"
                    android:enabled="false"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>
