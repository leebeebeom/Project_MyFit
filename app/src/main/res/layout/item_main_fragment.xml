<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--        ClothingAdapter에서 들어온 ChildCategory 객체-->
        <variable
            name="childCategory"
            type="com.example.project_myfit.ui.main.database.ChildCategory" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            app:cardElevation="@dimen/_3sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--            clickable 설정 후 -->
                <!--            android:foreground="?attr/selectableItemBackground"-->
                <!--            설정으로 클릭 효과 생성-->
                <!--            set_image는 MainViewModel에서 재정의-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_image_clothing"
                    android:layout_width="@dimen/_128sdp"
                    android:layout_height="@dimen/_128sdp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingStart="@dimen/_44sdp"
                    android:paddingEnd="@dimen/_44sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:tint="?attr/colorControlNormal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:set_image="@{childCategory.image}"
                    tools:src="@drawable/category_shortsleeve" />
                <!--            childCategory 객체로 텍스트 설정-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:text="@{childCategory.childCategory}"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="short sleeve" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
