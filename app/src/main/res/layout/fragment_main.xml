<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.project_myfit.util.LockableScrollView
            android:id="@+id/main_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/category"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:fontFamily="@font/noto_black" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_top"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/top"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_bottom"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/bottom"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_outer"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/outer"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_etc"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/etc"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.example.project_myfit.util.LockableScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_top_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_44sdp"
            android:contentDescription="@string/floating_action_button"
            android:src="@drawable/icon_arrow_up"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:fabCustomSize="@dimen/_24sdp"
            app:fabSize="mini" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
