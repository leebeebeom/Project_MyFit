<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.project_myfit.util.LockableScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/category_cap"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:fontFamily="@font/noto_black" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/mainToggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mainTopButton"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/top"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mainBottomButton"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/bottom"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mainOuterButton"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/outer"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mainETCButton"
                        style="?materialButtonOutlinedStyle"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="@string/etc"
                        android:textSize="@dimen/_9sdp"
                        app:rippleColor="@android:color/transparent" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/mainViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.example.project_myfit.util.LockableScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
