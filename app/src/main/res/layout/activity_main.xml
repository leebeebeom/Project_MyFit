<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="autoCompleteAdapter"
            type="com.leebeebeom.closetnote.util.adapter.AutoCompleteAdapter" />

        <variable
            name="activity"
            type="com.leebeebeom.closetnote.ui.main.MainActivity" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <include
            android:id="@+id/actionBar"
            layout="@layout/activity_main_action_bar"
            app:autoCompleteAdapter="@{autoCompleteAdapter}" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/host_fragment_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:navGraph="@navigation/nav_graph_main"
            tools:layout="@layout/fragment_main" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="bottom"
            app:backgroundTint="?colorPrimary"
            app:contentInsetStart="0dp"
            app:elevation="@dimen/_6sdp"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="@dimen/_6sdp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNav"
                app:backgroundTintList="@{null}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:theme="@style/myBottomNavActiveColor"
                app:elevation="0dp"
                app:itemIconSize="@dimen/_22sdp"
                app:itemRippleColor="@android:color/transparent"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/menu_bottom_nav" />
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_anchor="@id/bottomAppBar"
            app:tint="?colorPrimary"
            tools:src="@drawable/icon_add"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_anchor="@id/bottomAppBar"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_48sdp"
            app:srcCompat="@drawable/icon_arrow_up"
            app:layout_anchorGravity="end"
            app:backgroundTint="@color/white"
            app:fabCustomSize="@dimen/_24sdp"
            tools:ignore="ContentDescription" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="?myIndicatorColor" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
