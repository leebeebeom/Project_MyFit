<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.project_myfit.main.main.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/toListFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/fragment_slide_in"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_slide_out" />
        <action
            android:id="@+id/toSearchActivity"
            app:destination="@id/searchActivity" />
        <action
            android:id="@+id/toAddDialog"
            app:destination="@id/addDialog" />
        <action
            android:id="@+id/toEditNameDialog"
            app:destination="@id/editNameDialog" />
        <action
            android:id="@+id/toDeleteSelectedItemDialog"
            app:destination="@id/deleteSelectedItemDialog" />
        <action
            android:id="@+id/toSortDialog"
            app:destination="@id/sortDialog" />
        <action
            android:id="@+id/toRecycleBinActivity"
            app:destination="@id/recycleBinActivity" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.project_myfit.main.list.ListFragment"
        tools:layout="@layout/fragment_list">
        <argument
            android:name="categoryId"
            app:argType="long" />
        <argument
            android:name="folderId"
            app:argType="long" />
        <argument
            android:name="parentCategory"
            app:argType="string" />
        <action
            android:id="@+id/toSizeFragment"
            app:destination="@id/sizeFragment"
            app:enterAnim="@anim/fragment_slide_in"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_slide_out" />
        <action
            android:id="@+id/toMainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_slide_out"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_slide_out"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/listFragmentRefresh"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/fragment_slide_in"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_slide_out" />
        <action
            android:id="@+id/toSearchActivity"
            app:destination="@id/searchActivity" />
        <action
            android:id="@+id/toDeleteSelectedItemDialog"
            app:destination="@id/deleteSelectedItemDialog" />
        <action
            android:id="@+id/toEditNameDialog"
            app:destination="@id/editNameDialog" />
        <action
            android:id="@+id/toSortDialog"
            app:destination="@id/sortDialog" />
        <action
            android:id="@+id/toTreeViewDialog"
            app:destination="@id/treeViewDialog" />
        <action
            android:id="@+id/toAddDialog"
            app:destination="@id/addDialog" />
        <action
            android:id="@+id/toRecycleBinActivity"
            app:destination="@id/recycleBinActivity" />
    </fragment>
    <fragment
        android:id="@+id/sizeFragment"
        android:name="com.example.project_myfit.main.size.SizeFragment"
        android:label=""
        tools:layout="@layout/fragment_size">
        <argument
            android:name="parentId"
            app:argType="long" />
        <argument
            android:name="sizeId"
            app:argType="long" />
        <argument
            android:name="parentCategory"
            app:argType="string" />
        <action
            android:id="@+id/toSizeDeleteDialog"
            app:destination="@id/SizeDeleteDialog" />
        <action
            android:id="@+id/toGoBackDialog"
            app:destination="@id/goBackDialog" />
        <action
            android:id="@+id/toDeleteImageDialog"
            app:destination="@id/deleteImageDialog" />

    </fragment>
    <activity
        android:id="@+id/searchActivity"
        android:name="com.example.project_myfit.search.SearchActivity"
        tools:layout="@layout/activity_search"
        android:label="SearchActivity"/>
    <!--    Dialog-->
    <dialog
        android:id="@+id/addDialog"
        android:name="com.example.project_myfit.dialog.AddDialog"
        android:label="AddDialog">
        <argument
            android:name="itemType"
            app:argType="integer" />
        <argument
            android:name="parentCategory"
            app:argType="string" />
        <argument
            android:name="parentId"
            app:argType="long" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
        <action
            android:id="@+id/toAddSameNameDialog"
            app:destination="@id/addSameNameDialog" />
    </dialog>
    <dialog
        android:id="@+id/editNameDialog"
        android:name="com.example.project_myfit.dialog.EditNameDialog"
        android:label="EditNameDialog">
        <argument
            android:name="itemId"
            app:argType="long" />
        <argument
            android:name="itemType"
            app:argType="integer" />
        <argument
            android:name="isParentName"
            app:argType="boolean" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
        <action
            android:id="@+id/toEditSameNameDialog"
            app:destination="@id/editSameNameDialog" />
    </dialog>
    <dialog
        android:id="@+id/deleteSelectedItemDialog"
        android:name="com.example.project_myfit.dialog.DeleteSelectedItemDialog"
        android:label="mRepository.getCategoryRepository()Dialog">
        <argument
            android:name="selectedItemSize"
            app:argType="integer" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/sortDialog"
        android:name="com.example.project_myfit.dialog.SortDialog"
        android:label="SortDialog">
        <argument
            android:name="sort"
            app:argType="integer" />
        <argument
            android:name="fragmentType"
            app:argType="integer" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/addSameNameDialog"
        android:name="com.example.project_myfit.dialog.AddSameNameDialog"
        android:label="AddSameNameDialog">
        <argument
            android:name="itemType"
            app:argType="integer" />
        <argument
            android:name="parentCategory"
            app:argType="string" />
        <argument
            android:name="parentId"
            app:argType="long" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/treeViewDialog"
        android:name="com.example.project_myfit.dialog.TreeViewDialog"
        android:label="TreeViewDialog">
        <argument
            android:name="parentCategory"
            app:argType="string" />
        <argument
            android:name="thisCategoryId"
            app:argType="long" />
        <argument
            android:name="thisFolderId"
            app:argType="long" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
        <action
            android:id="@+id/toAddDialog"
            app:destination="@id/addDialog" />
        <action
            android:id="@+id/toMoveDialog"
            app:destination="@id/moveDialog" />
    </dialog>
    <dialog
        android:id="@+id/editSameNameDialog"
        android:name="com.example.project_myfit.dialog.EditSameNameDialog"
        android:label="EditSameNameDialog">
        <argument
            android:name="itemType"
            app:argType="integer" />
        <argument
            android:name="itemId"
            app:argType="long" />
        <argument
            android:name="newName"
            app:argType="string" />
        <argument
            android:name="isParentName"
            app:argType="boolean" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/moveDialog"
        android:name="com.example.project_myfit.dialog.MoveDialog"
        android:label="MoveDialog">
        <argument
            android:name="selectedItemSize"
            app:argType="integer" />
        <argument
            android:name="parentId"
            app:argType="long" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/SizeDeleteDialog"
        android:name="com.example.project_myfit.dialog.SizeDeleteDialog"
        android:label="SizeDeleteDialog">
        <argument
            android:name="sizeId"
            app:argType="long" />
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/goBackDialog"
        android:name="com.example.project_myfit.dialog.GoBackDialog"
        android:label="GoBackDialog">
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/deleteImageDialog"
        android:name="com.example.project_myfit.dialog.DeleteImageDialog"
        android:label="DeleteImageDialog">
        <argument
            android:name="navGraphId"
            app:argType="integer" />
    </dialog>
    <activity
        android:id="@+id/recycleBinActivity"
        android:name="com.example.project_myfit.recyclebin.RecycleBinActivity"
        android:label="activityRecycleBin"
        tools:layout="@layout/activity_recycle_bin" />
</navigation>