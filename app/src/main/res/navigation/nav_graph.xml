<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.project_myfit.ui.main.MainFragment"
        android:label="CATEGORY"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addCategoryActivity"
            app:destination="@id/AddCategoryActivity"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_mainFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.project_myfit.ui.favorite.FavoriteFargment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/averageFragment"
        android:name="com.example.project_myfit.ui.Average.AverageFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />
    <activity
        android:id="@+id/AddCategoryActivity"
        android:name="com.example.project_myfit.ui.main.category_activity.AddCategoryActivity"
        android:label="ADD CATEGORY"
        tools:layout="@layout/activity_add_category" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.project_myfit.ui.main.listfragment.ListFragment"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_inputFragment"
            app:destination="@id/inputFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_listFragment_to_outputFragment"
            app:destination="@id/outputFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.example.project_myfit.ui.main.listfragment.inputfragment.InputFragment"
        tools:layout="@layout/fragment_input" >
        <action
            android:id="@+id/action_inputFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/outputFragment"
        android:name="com.example.project_myfit.ui.main.listfragment.outputfragment.OutputFragment"
        android:label="output_fragment"
        tools:layout="@layout/fragment_input" />
</navigation>