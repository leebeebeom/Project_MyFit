<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    actionMode close button gone-->
    <style name="myActionBarCloseButton">
        <item name="android:visibility">gone</item>
    </style>

    <!--    menu icon padding-->
    <style name="myMenuPadding" parent="Theme.Closet_Note">
        <item name="android:padding">@dimen/_3sdp</item>
    </style>

    <!--    edit text corner-->
    <style name="myEditTextCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>

    <!--    bottom navigation active color-->
    <style name="myBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">?myColorControl</item>
    </style>

    <!--    action bar title size-->
    <style name="myActionBarTitleStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="myTextSize9sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="myTextSize10sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="myTextSize11sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>
</resources>