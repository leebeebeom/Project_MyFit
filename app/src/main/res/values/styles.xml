<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    alert dialog style-->
    <style name="myAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">?myColorControl</item>
        <!--        single choice item text color-->
        <item name="textColorAlertDialogListItem">?myColorControl</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <!--    outlined edit text layout style-->
    <style name="myOutlinedEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outlined_edit_text</item>
        <item name="hintTextAppearance">@style/myTextSize10sdp</item>
        <item name="hintTextColor">?myColorControl</item>
        <item name="errorTextAppearance">@style/myTextSize9sdp</item>
        <item name="placeholderTextAppearance">@style/myTextSize11sdp</item>
        <item name="shapeAppearance">@style/myEditTextCorner</item>
        <item name="suffixTextAppearance">@style/myTextSize10sdp</item>
    </style>

    <!--    auto complete text view layout style-->
    <style name="myAutoCompleteTextViewLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/outlined_edit_text</item>
        <item name="hintTextAppearance">@style/myTextSize10sdp</item>
        <item name="hintTextColor">?myColorControl</item>
        <item name="errorTextAppearance">@style/myTextSize9sdp</item>
        <item name="placeholderTextAppearance">@style/myTextSize11sdp</item>
        <item name="shapeAppearance">@style/myEditTextCorner</item>
        <item name="suffixTextAppearance">@style/myTextSize10sdp</item>
    </style>

    <style name="myAppNameTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="fontFamily">@font/ballet_harmony</item>
    </style>

    <style name="myOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sc_dream5</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="strokeWidth">1px</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="myCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?myCardViewBackground</item>
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
    </style>

    <style name="myCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="alpha">0.8</item>
        <item name="android:clickable">false</item>
        <item name="enabled">false</item>
        <item name="android:enabled">false</item>
        <item name="buttonTint">?myColorControl</item>
    </style>

    <style name="myFragmentMainTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/noto_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="myFragmentSubTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/noto_bold</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>
</resources>