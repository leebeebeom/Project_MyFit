<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Closet_Note" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorControlActivated" tools:targetApi="l">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- status bar text color -->
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>

        <!-- Customize your theme here. -->
        <!--        phone navigation bar color-->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
        <!--        phone navigation bar icon color-->
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <!--        menu color-->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!--        text color-->
        <item name="android:textColor">@color/black</item>
        <!--        actionMode close button gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>
        <!--        actionMode cover actionBar-->
        <item name="windowActionModeOverlay">true</item>
        <!--        font-->
        <item name="fontFamily">@font/noto</item>
        <!--        my background color-->
        <item name="rvBackground">@color/myBackgroundColor</item>
        <!--        go button color-->
        <item name="goBtnBackground">@color/myGoButtonBackgroundColor</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <!--        my color control-->
        <item name="myColorControl">@color/black</item>
        <!--        tree view background color-->
        <item name="treeBackgroundColor">@color/white</item>
        <!--        menu icon padding-->
        <item name="actionButtonStyle">@style/myMenuPadding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="myCardViewBackground">@color/white</item>
        <item name="myIndicatorColor">#D3D3D3</item>
        <item name="mySignButtonHeight">@dimen/_48sdp</item>
        <item name="myNormalButtonHeight">@dimen/_36sdp</item>
        <item name="mySettingCardViewHeight">@dimen/_40sdp</item>
    </style>
    <!--    actionMode close button gone-->
    <style name="myActionBarCloseButton">
        <item name="android:visibility">gone</item>
    </style>
    <!--    menu icon padding-->
    <style name="myMenuPadding" parent="Theme.Closet_Note">
        <item name="android:padding">@dimen/_3sdp</item>
    </style>
    <!--    edit text corner-->
    <style name="myEditTextCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>
    <!--    bottom navigation active color-->
    <style name="myBottomNavActiveColor" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    alert dialog Style-->
    <style name="myAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <!--        single choice item text color-->
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <!--    edit text style-->
    <style name="myOutlineEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outlined_edit_text</item>
        <item name="hintTextAppearance">@style/myTextSize10sdp</item>
        <item name="hintTextColor">?myColorControl</item>
        <item name="errorTextAppearance">@style/myTextSize9sdp</item>
        <item name="placeholderTextAppearance">@style/myTextSize11sdp</item>
        <item name="shapeAppearance">@style/myEditTextCorner</item>
        <item name="suffixTextAppearance">@style/myTextSize10sdp</item>
    </style>
    <!--    autocomplete textview layout-->
    <style name="myAutoCompleteTextViewLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/outlined_edit_text</item>
        <item name="hintTextAppearance">@style/myTextSize10sdp</item>
        <item name="hintTextColor">?myColorControl</item>
        <item name="errorTextAppearance">@style/myTextSize9sdp</item>
        <item name="placeholderTextAppearance">@style/myTextSize11sdp</item>
        <item name="shapeAppearance">@style/myEditTextCorner</item>
        <item name="suffixTextAppearance">@style/myTextSize10sdp</item>
    </style>
    <!--    action bar title style-->
    <style name="myActionBarTitleStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="myTextSize9sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="myTextSize10sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="myTextSize11sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="myPlaceHolderAppearance">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="placeholderTextColor">@color/mtrl_indicator_text_color</item>
    </style>

    <style name="myAppNameTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="fontFamily">@font/ballet_harmony</item>
    </style>

    <style name="myOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sc_dream5</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="strokeWidth">1px</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="myCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?myCardViewBackground</item>
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
    </style>

    <style name="myCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="alpha">0.8</item>
        <item name="android:clickable">false</item>
        <item name="enabled">false</item>
        <item name="android:enabled">false</item>
        <item name="buttonTint">?myColorControl</item>
    </style>

    <style name="myFragmentMainTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/noto_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="myFragmentSubTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/noto_bold</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <attr name="rvBackground" format="color" />
    <attr name="goBtnBackground" format="color" />
    <attr name="myColorControl" format="color" />
    <attr name="treeBackgroundColor" format="color" />
    <attr name="myCardViewBackground" format="color" />
    <attr name="myIndicatorColor" format="color" />
    <attr name="mySignButtonHeight" format="dimension" />
    <attr name="myNormalButtonHeight" format="dimension" />
    <attr name="mySettingCardViewHeight" format="dimension" />
</resources>