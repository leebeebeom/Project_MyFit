<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_MyFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!--        Font-->
        <item name="fontFamily">@font/font_ibm_plex_sans</item>
        <!--        Phone Navigation Bar Color-->
        <item name="android:navigationBarColor">@color/white</item>
        <!--        Menu Text Color-->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!--        Menu Text Style-->
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
        <!--        Text Color-->
        <item name="android:textColor">@color/black</item>
        <!--        Snack Bar Text Style-->
        <item name="snackbarTextViewStyle">@style/mySnackBarText</item>
        <!--        Snack Bar Action Style-->
        <item name="snackbarButtonStyle">@style/mySnackBarButton</item>
        <!--        Snack Bar Style-->
        <item name="snackbarStyle">@style/mySnackBar</item>
        <!--        Child Category Text color-->
        <!--        <item name="childCategoryText">@color/childCategory_text_color</item>-->
        <item name="childCategoryBackground">@color/childCategory_background</item>
        <item name="childCategoryDragBackground">@color/childCategory_drag_background</item>
        <item name="fabColor">@color/fabColor</item>
        <item name="fabChildTintColor">@color/fabChild_tint_color</item>
        <item name="fabChildBackgroundColor">@color/fabChild_background_color</item>
        <item name="fabTint">@color/fab_tint</item>
    </style>
    <!--    Tool Bar Title Style-->
    <!--    In Activity_main.xml-->
    <style name="myToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
    <!--    Menu Text Style-->
    <style name="menuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <!--    Edit Text Corner-->
    <!--    In fragment_input.xml-->
    <style name="editTextCornerRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <!--    Bottom Navigation Active Color-->
    <style name="myBottomNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    Alert Dialog Style-->
    <!--    In MainFragment.java-->
    <style name="myAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>
    <!--    Edit Text Focused Outline-->
    <!--    In fragment_input.xml-->
    <style name="myEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    Snack Bar Text Style-->
    <style name="mySnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--    Snack Bar Action Style-->
    <style name="mySnackBarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF00CCCC</item>
    </style>
    <!--    Snack Bar Style-->
    <style name="mySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:paddingHorizontal">@dimen/_8sdp</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <attr name="childCategoryBackground" format="color" />
    <attr name="childCategoryDragBackground" format="color" />
    <attr name="fabColor" format="color" />
    <attr name="fabTint" format="color" />
    <attr name="fabChildTintColor" format="color" />
    <attr name="fabChildBackgroundColor" format="color" />
</resources>