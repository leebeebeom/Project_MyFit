<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_MyFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- status bar text color -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <!--        phone navigation bar color-->
        <item name="android:navigationBarColor">@color/white</item>
        <!--        phone navigation bar icon color-->
        <item name="android:windowLightNavigationBar">true</item>
        <!--        menu color-->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!--        text color-->
        <item name="android:textColor">@color/black</item>
        <!--        actionMode close button gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>
        <!--        actionMode cover actionBar-->
        <item name="windowActionModeOverlay">true</item>
        <!--        font-->
        <item name="fontFamily">@font/noto</item>
        <!--        recycler view background color-->
        <item name="rvBackground">@color/rv_background</item>
        <!--        input output go button color-->
        <item name="goBtnBackground">@color/go_btn_background</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <!--        my color control-->
        <item name="myColorControl">@color/black</item>
        <!--        tree view background color-->
        <item name="treeBackgroundColor">@color/white</item>
        <!--        menu icon padding-->
        <item name="actionButtonStyle">@style/myMenuPadding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="myCardViewBackground">@color/white</item>
    </style>
    <!--    actionMode close button gone-->
    <style name="myActionBarCloseButton">
        <item name="android:visibility">gone</item>
    </style>
    <!--    menu icon padding-->
    <style name="myMenuPadding" parent="Theme.Project_MyFit">
        <item name="android:padding">@dimen/_3sdp</item>
    </style>
    <!--    edit text corner-->
    <style name="myEditTextCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>
    <!--    bottom navigation active color-->
    <style name="myBottomNavActiveColor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    alert dialog Style-->
    <style name="myAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <!--        single choice item text color-->
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <!--    edit text focused outline-->
    <style name="myEditTextOutlineColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    action bar title style-->
    <style name="myActionBarTitleStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="myTextSize8sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="myTextSize9sdp" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="myTextSize10sdp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="myTextSize11sdp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <attr name="rvBackground" format="color" />
    <attr name="goBtnBackground" format="color" />
    <attr name="myColorControl" format="color" />
    <attr name="treeBackgroundColor" format="color" />
    <attr name="myCardViewBackground" format="color" />
</resources>