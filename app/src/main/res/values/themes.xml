<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_MyFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!--        Phone Navigation Bar Color-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!--        Menu Text Color-->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!--        Menu Text Style-->
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
        <!--        Text Color-->
        <item name="android:textColor">@color/black</item>
        <!--        Snack Bar Text Style-->
        <item name="snackbarTextViewStyle">@style/mySnackBarText</item>
        <!--        Snack Bar Action Style-->
        <item name="snackbarButtonStyle">@style/mySnackBarAction</item>
        <!--        Snack Bar Style-->
        <item name="snackbarStyle">@style/mySnackBar</item>
        <!--        ActionMode Close Button Gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="fontFamily">@font/sc_dream</item>
        <item name="recyclerBackground">@color/recycler_background</item>
        <item name="go_button_color">@color/go_button_color</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="myColorControl">@color/black</item>
    </style>
    )
    <!--    Tool Bar Title Style-->
    <!--    In Activity_main.xml-->
    <style name="myToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
    <!--    Menu Text Style-->
    <style name="menuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <!--    Edit Text Corner-->
    <!--    In fragment_input.xml-->
    <style name="myEditTextCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <!--    Bottom Navigation Active Color-->
    <style name="myBottomNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    Alert Dialog Style-->
    <!--    In MainFragment.java-->
    <style name="myAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>
    <!--    Edit Text Focused Outline-->
    <!--    In fragment_input.xml-->
    <style name="myEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/black</item>
    </style>
    <!--    Snack Bar Text Style-->
    <style name="mySnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--    Snack Bar Action Style-->
    <style name="mySnackBarAction" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF00CCCC</item>
    </style>
    <!--    Snack Bar Style-->
    <style name="mySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:paddingHorizontal">@dimen/_8sdp</item>
        <item name="actionTextColorAlpha">1</item>
    </style>
    <!--    Action Bar Title Style-->
    <style name="myActionBarTitleStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <!--    Action Mode Close Button-->
    <style name="myActionBarCloseButton">
        <item name="android:visibility">gone</item>
    </style>

    <attr name="recyclerBackground" format="color" />
    <attr name="go_button_color" format="color" />
    <attr name="myColorControl" format="color" />
</resources>