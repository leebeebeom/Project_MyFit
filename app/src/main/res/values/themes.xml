<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Closet_Note" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorControlActivated" tools:targetApi="l">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- status bar text color -->
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>

        <!-- Customize your theme here. -->
        <!--        phone navigation bar color-->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
        <!--        phone navigation bar icon color-->
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <!--        menu color-->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!--        text color-->
        <item name="android:textColor">@color/black</item>
        <!--        actionMode close button gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>
        <!--        actionMode cover actionBar-->
        <item name="windowActionModeOverlay">true</item>
        <!--        font-->
        <item name="fontFamily">@font/noto</item>
        <!--        my background color-->
        <item name="backgroundGrey">@color/myBackgroundColor</item>
        <!--        go button color-->
        <item name="goBtnBackground">@color/myGoButtonBackgroundColor</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <!--        my color control-->
        <item name="myColorControl">@color/black</item>
        <!--        tree view background color-->
        <item name="treeBackgroundColor">@color/white</item>
        <!--        menu icon padding-->
        <item name="actionButtonStyle">@style/myMenuPadding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="myCardViewBackground">@color/white</item>
        <item name="myIndicatorColor">#D3D3D3</item>
        <item name="mySignButtonHeight">@dimen/_48sdp</item>
        <item name="myNormalButtonHeight">@dimen/_36sdp</item>
        <item name="mySettingCardViewHeight">@dimen/_40sdp</item>
        <item name="backgroundPrimary">@color/white</item>
    </style>
</resources>