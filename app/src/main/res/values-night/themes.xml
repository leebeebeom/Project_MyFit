<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_MyFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">#FF121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnError">#000000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FF282828</item>
        <!-- Customize your theme here. -->
        <!--        Phone Navigation Bar Color-->
        <item name="android:navigationBarColor">#FF2D2D2D</item>
        <!--        Menu Text Color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--        Menu Text Style-->
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
        <!--        Text Color-->
        <item name="android:textColor">@color/white</item>
        <!--        Snack Bar Text Style-->
        <item name="snackbarTextViewStyle">@style/mySnackBarText</item>
        <!--        Snack Bar Action Style-->
        <item name="snackbarButtonStyle">@style/mySnackBarAction</item>
        <!--        Snack Bar Style-->
        <item name="snackbarStyle">@style/mySnackBar</item>
        <!--        ActionMode Close Button Gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="fontFamily">@font/sc_dream</item>
        <item name="recyclerBackground">@color/recycler_background_night</item>
        <item name="go_button_color">@color/go_button_color_night</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="myColorControl">@color/white</item>
    </style>
    <!--    Bottom Navigation Active Color-->
    <style name="myBottomNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>
    <!--    Alert Dialog Style-->
    <!--    In MainFragment.java-->
    <style name="myAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--    Edit Text Focused Outline-->
    <!--    In fragment_input.xml-->
    <style name="myEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>