<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_MyFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <!--        ↑ 앱바, 바텀네비게이션 선택 됐을때 컬러-->
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--        ↑ 액션 모드 뒤로가기 컬러-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">#FF121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnError">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <!--        폰트 변경-->
        <item name="fontFamily">@font/font_ibm_plex_sans</item>
        <!--        네비게이션 바 컬러 변경-->
        <item name="android:navigationBarColor">@color/black</item>
        <!--        메뉴 컬러 변경-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--        텍스트 컬러 변경-->
        <item name="android:textColor">@color/white</item>
        <!--        메뉴 텍스트 스타일-->
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
        <!--        액션 모드 메뉴 컬러-->
        <item name="actionBarTheme">@style/myActionModeUpButtonDark</item>

    </style>
    <!--    바텀 네비게이션 액티브 컬러-->
    <style name="myBottomNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- 알러트 다이얼로그-->
    <!--    MainFragment에서 따로 입혔음-->
    <style name="myAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    액션 모드 뒤로가기-->
    <style name="myActionModeUpButtonDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!--    에딧텍스트 포커스 아웃라인-->
    <!--    xml에서 적용-->
    <style name="myEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!--    브랜드 텍스트 컬러-->
    <style name="myItemBrandColor" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/light_gray</item>
    </style>

</resources>