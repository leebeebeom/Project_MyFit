<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Closet_Note" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- From Material Design. -->
        <item name="colorSurface">#FF121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnError">#000000</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorControlActivated" tools:targetApi="l">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize your theme here. -->
        <!--        phone navigation bar color-->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
        <!--        menu color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--        text color-->
        <item name="android:textColor">@color/white</item>
        <!--        actionMode close button gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>
        <!--        actionMode cover actionBar-->
        <item name="windowActionModeOverlay">true</item>
        <!--        font-->
        <item name="fontFamily">@font/noto</item>
        <!--        my background color-->
        <item name="rvBackground">@color/myBackgroundColorNight</item>
        <!--        go button color-->
        <item name="goBtnBackground">@color/myGoButtonBackgroundColorNight</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <!--        my color control-->
        <item name="myColorControl">@color/white</item>
        <!--        tree view background color-->
        <item name="treeBackgroundColor">#FF292929</item>
        <!--        menu icon padding-->
        <item name="actionButtonStyle">@style/myMenuPadding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="myCardViewBackground">#FF080808</item>
        <item name="myIndicatorColor">#696969</item>
        <item name="mySignButtonHeight">@dimen/_48sdp</item>
        <item name="myNormalButtonHeight">@dimen/_36sdp</item>
        <item name="mySettingCardViewHeight">@dimen/_40sdp</item>
    </style>
</resources>