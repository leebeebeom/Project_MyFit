<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_MyFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">#FF121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnError">#000000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <!--        Font-->
        <item name="fontFamily">@font/font_ibm_plex_sans</item>
        <!--        Phone Navigation Bar Color-->
        <item name="android:navigationBarColor">@color/black</item>
        <!--        Menu Text Color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--        Menu Text Style-->
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
        <!--        Text Color-->
        <item name="android:textColor">@color/white</item>
        <!--        Snack Bar Text Style-->
        <item name="snackbarTextViewStyle">@style/mySnackBarText</item>
        <!--        Snack Bar Action Style-->
        <item name="snackbarButtonStyle">@style/mySnackBarButton</item>
        <!--        Snack Bar Style-->
        <item name="snackbarStyle">@style/mySnackBar</item>

    </style>
    <!--    Bottom Navigation Active Color-->
    <style name="myBottomNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>
    <!--    Alert Dialog Style-->
    <!--    In MainFragment.java-->
    <style name="myAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--    Edit Text Focused Outline-->
    <!--    In fragment_input.xml-->
    <style name="myEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/white</item>
    </style>
    <!--    List Fragment Brand Colors-->
    <style name="myItemBrandColor" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/gainsboro_gray</item>
    </style>
</resources>