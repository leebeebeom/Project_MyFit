<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Closet_Note" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- From Material Design. -->
        <item name="colorSurface">#FF121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnError">#000000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>

        <!-- Customize your theme here. -->
        <!--        phone navigation bar color-->
        <item name="android:navigationBarColor">#000000</item>
        <!--        menu color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--        text color-->
        <item name="android:textColor">@color/white</item>
        <!--        actionMode close button gone-->
        <item name="actionModeCloseButtonStyle">@style/myActionBarCloseButton</item>
        <!--        actionMode cover actionBar-->
        <item name="windowActionModeOverlay">true</item>
        <!--        font-->
        <item name="fontFamily">@font/noto</item>
        <!--        recycler view background color-->
        <item name="rvBackground">@color/rv_background_night</item>
        <!--        input output go button color-->
        <item name="goBtnBackground">@color/go_btn_background_night</item>
        <!--        ripple color remove-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <!--        my color control-->
        <item name="myColorControl">@color/white</item>
        <!--        tree view background color-->
        <item name="treeBackgroundColor">#FF292929</item>
        <!--        menu icon padding-->
        <item name="actionButtonStyle">@style/myMenuPadding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="myCardViewBackground">#FF080808</item>
    </style>
    <!--    bottom navigation active color-->
    <style name="myBottomNavActiveColor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>
    <!--    alert dialog style-->
    <style name="myAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <!--        single choice item text color-->
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <!--    edit text focused outline-->
    <style name="myOutlineEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>