<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="200"
    android:fillAfter="true">
    <translate
        android:fromYDelta="100%"
        android:toYDelta="0%" />
    <scale
        android:pivotX="30%"
        android:pivotY="120%"
        android:toXScale="1"
        android:toYScale="1" />

    <set android:duration="800">
        <alpha
            android:fromAlpha="0"
            android:toAlpha="1" />
    </set>
</set>